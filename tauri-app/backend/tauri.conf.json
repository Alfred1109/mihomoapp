{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Mihomo Manager",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true,
        "execute": true,
        "scope": [
          { "name": "mihomo", "cmd": "mihomo", "args": true },
          { "name": "systemctl", "cmd": "systemctl", "args": ["start", "stop", "restart", "status", "enable", "disable", "daemon-reload"] },
          { "name": "sc", "cmd": "sc", "args": ["query", "start", "stop", "delete", "create", "config"] },
          { "name": "taskkill", "cmd": "taskkill", "args": ["/F", "/PID"] },
          { "name": "pkill", "cmd": "pkill", "args": ["-9"] }
        ]
      },
      "dialog": {
        "ask": true,
        "message": true,
        "open": false,
        "save": false
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "readDir": false,
        "copyFile": false,
        "createDir": false,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "scope": ["$APPCONFIG/**", "$RESOURCE/**"]
      },
      "os": {
        "all": false
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$APPCONFIG/**", "$RESOURCE/**"]
      }
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' http://127.0.0.1:* http://localhost:*"
    },
    "bundle": {
      "active": true,
      "identifier": "com.alfred.mihomoapp",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.png",
        "icons/icon.ico",
        "icons/icon.icns"
      ],
      "resources": [
        "resources/mihomo",
        "resources/mihomo.exe",
        "resources/winsw.exe"
      ],
      "externalBin": [],
      "targets": ["deb", "msi", "nsis"],
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0 | libwebkit2gtk-4.0-37",
          "libayatana-appindicator3-1",
          "libgtk-3-0"
        ],
        "desktopTemplate": "mihomoapp.desktop"
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        }
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "Mihomo Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}
