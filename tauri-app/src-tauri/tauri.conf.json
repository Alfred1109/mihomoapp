{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Mihomo Manager",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true,
        "execute": true
      },
      "dialog": {
        "ask": true,
        "message": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "exists": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.alfred.mihomoapp",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.png"
      ],
      "targets": ["deb"],
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libjavascriptcoregtk-4.1-0", "libgtk-3-0", "libayatana-appindicator3-1"],
        "files": {},
        "desktopTemplate": "mihomoapp.desktop"
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "Mihomo Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}
